}

/* ===== OVERLAP SECTIONS (padding-bottom + margin-top technique) ===== */

/* Section with extra bottom padding for overlap */
.s_custom_overlapBottom {
  padding-bottom: calc(var(--overlap-space) + 60px) !important;
  position: relative;
}

/* Section that overlaps into the one above */
.s_custom_overlapTop {
  margin-top: calc(-1 * var(--overlap-space)) !important;
  position: relative;
  z-index: 2;
}

@media (max-width: 991.98px) {
  .s_custom_overlapBottom {
    padding-bottom: calc(40px + 40px) !important;
  }
  .s_custom_overlapTop {
    margin-top: -40px !important;
  }
}

/* ===== RED ACCENT BLOCKS WITH ::before ===== */

/* Red block on left side */
.s_custom_redAccentLeft::before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 120px;
  height: 70%;
  background: var(--mt-red);
  z-index: 0;
}
@media (max-width: 991.98px) {
  .s_custom_redAccentLeft::before {
    width: 60px;
    height: 50%;
  }
}

/* Red block bottom-left corner */
.s_custom_redAccentBL::before {
  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 150px;
  height: 150px;
  background: var(--mt-red);
  z-index: 0;
}

/* Red block top-right corner */
.s_custom_redAccentTR::after {
  content: "";
  position: absolute;
  right: 0;
  top: 0;
  width: 120px;
  height: 120px;
  background: var(--mt-red);
  z-index: 0;
}

/* Red diagonal accent for CTA */
.s_custom_redDiagonal::before {
  content: "";
  position: absolute;
  right: 0;
  top: 0;
  width: 40%;
  height: 100%;
  background: var(--mt-red);
  clip-path: polygon(30% 0, 100% 0, 100% 100%, 0 100%);
  z-index: 0;
}
@media (max-width: 991.98px) {
  .s_custom_redDiagonal::before {
    display: none;
  }
}

